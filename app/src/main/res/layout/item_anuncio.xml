<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    android:id="@+id/contenedor_servicios"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    android:minHeight="150dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:id="@+id/anu_img_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|left"
            android:src="@color/blue_btn_bg_color"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/anu_tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compro catre viejo"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/anu_tv_descripcion"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U rgente! compro, catre a 50 soles."
                android:textSize="18dp"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.design.card.MaterialCardView>